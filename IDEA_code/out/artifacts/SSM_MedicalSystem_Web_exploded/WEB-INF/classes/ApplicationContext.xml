<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <import resource="classpath:spring-dao.xml"></import>
    <import resource="classpath:spring-service.xml"></import>
    <import resource="classpath:spring-mvc.xml"></import>
    <import resource="classpath:spring-redis.xml"></import>

    <!--配置拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/Admin/**"/>
            <bean class="com.liyujie.utils.Interceptor">
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/Doctor/**"/>
            <bean class="com.liyujie.utils.Interceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/Patient/**"/>
            <bean class="com.liyujie.utils.Interceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>